name: postal

images:
  main:
    name: ghcr.io/postalserver/postal
    tag: latest

commands:
  console:
    target: deployment/worker
    command: bundle exec rails console
  bash:
    target: deployment/worker
    command: /bin/bash
  mysql:
    target: pod/mariadb-master-0
    command: "mysql -u root -p{{secrets.mariadb.rootPassword:}} myops"

  postal:
    target: deployment/worker
    command: ./bin/postal

